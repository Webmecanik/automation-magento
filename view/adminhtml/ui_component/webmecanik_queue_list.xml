<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">webmecanik_queue_list.webmecanik_queue_list_data_source</item>
            <item name="deps" xsi:type="string">webmecanik_queue_list.webmecanik_queue_list_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="retryall">
                <url path="*/*/retryAll"/>
                <class>primary</class>
                <label translate="true">Retry all failed messages</label>
            </button>
        </buttons>
        <spinner>webmecanik_queue_list_columns</spinner>
        <deps>
            <dep>webmecanik_queue_list.webmecanik_queue_list_data_source</dep>
        </deps>
    </settings>
    <dataSource name="webmecanik_queue_list_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Webmecanik_Connector::all</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="webmecanik_queue_list_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="webmecanik_queue_list_columns">
        <column name="id">
            <settings>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
                <draggable>false</draggable>
            </settings>
        </column>

        <column name="rejection_message" class="Webmecanik\Connector\Ui\Component\Listing\Column\RejectionMessage">
            <settings>
                <label translate="true">Rejection message</label>
                <sortable>false</sortable>
                <draggable>false</draggable>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>

        <column name="message_body">
            <settings>
                <label translate="true">Message</label>
                <sortable>false</sortable>
                <draggable>false</draggable>
            </settings>
        </column>

        <column name="status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <dataType>select</dataType>
                <filter>select</filter>
                <label translate="true">Status</label>
                <options class="Webmecanik\Connector\Model\Source\MessageStatus"/>
                <draggable>false</draggable>
            </settings>
        </column>

        <column name="updated_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Updated At</label>
                <draggable>false</draggable>
            </settings>
        </column>
        <actionsColumn name="actions" class="Webmecanik\Connector\Ui\Component\Listing\Column\QueueActions">
            <settings>
                <indexField>block_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
